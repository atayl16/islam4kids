<div class="max-w-4xl mx-auto">
  <article class="bg-white rounded-2xl shadow-2xl overflow-hidden">
    <!-- Decorative Header Strip -->
    <div class="h-2 bg-gradient-to-r from-violet-500 via-violet-400 to-amber-400"></div>

    <!-- Header Section -->
    <div class="bg-gradient-to-br from-violet-600 via-violet-500 to-violet-600 px-8 md:px-12 py-10">
      <div class="flex items-start space-x-4 mb-4">
        <div class="flex-shrink-0">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h1 class="text-3xl md:text-4xl font-bold text-white mb-3 leading-tight"><%= @story.title %></h1>
          <div class="flex items-center space-x-4 text-violet-50">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="text-sm font-medium"><%= @story.created_at.strftime('%B %d, %Y') %></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if @story.summary.present? %>
      <div class="px-8 md:px-12 py-6 bg-white">
        <p class="text-sm text-slate-600 italic leading-relaxed"><%= @story.summary %></p>
      </div>
    <% end %>

    <% if @story.header_image.attached? %>
      <div class="flex items-center justify-center mb-8 px-8 md:px-12">
        <%= image_tag @story.header_image, class: 'w-full h-auto rounded-lg shadow-lg', alt: @story.title %>
      </div>
    <% end %>

    <!-- Content Section -->
    <div class="px-8 md:px-12 py-12">
      <div class="prose prose-lg prose-slate max-w-none">
        <!-- Custom prose styling for better readability -->
        <div class="text-slate-700 leading-relaxed space-y-4 text-lg">
          <%= simple_format(@story.content, {}, class: "mb-4") %>
        </div>
      </div>
    </div>

    <!-- Decorative Divider -->
    <div class="px-8 md:px-12">
      <div class="h-px bg-gradient-to-r from-transparent via-violet-200 to-transparent"></div>
    </div>

    <!-- Footer Section -->
    <div class="px-8 md:px-12 py-8 bg-gradient-to-b from-white to-slate-50">
      <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
        <%= link_to stories_path, class: "inline-flex items-center px-6 py-3 bg-violet-600 hover:bg-violet-700 text-white rounded-xl font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to All Stories
        <% end %>

        <div class="flex items-center space-x-3">
          <span class="text-sm font-medium text-slate-600">Share this story:</span>
          <button class="inline-flex items-center justify-center w-10 h-10 bg-slate-100 hover:bg-violet-100 text-slate-600 hover:text-violet-600 rounded-lg transition-all duration-200">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Content Hint (Optional) -->
  <div class="mt-8 text-center">
    <%= link_to stories_path, class: "inline-flex items-center text-violet-600 hover:text-violet-700 font-semibold transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
      </svg>
      Explore More Inspiring Stories
    <% end %>
  </div>
</div>
