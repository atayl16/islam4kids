<div class="max-w-md mx-auto">
  <!-- Header -->
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-emerald-500 to-violet-500 rounded-full mb-4 shadow-lg">
      <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
      </svg>
    </div>
    <h2 class="text-4xl font-bold text-slate-800 mb-2">Reset Password</h2>
    <p class="text-slate-600">Enter your email and we'll send you reset instructions</p>
    <div class="mt-4 h-1 w-24 bg-gradient-to-r from-emerald-500 to-violet-500 rounded-full mx-auto"></div>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-2xl shadow-xl border-2 border-slate-100 p-8">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all" %>
      </div>

      <div class="pt-4">
        <%= f.submit "Send Reset Instructions", class: "w-full bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-600 hover:to-emerald-700 text-white font-semibold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 cursor-pointer" %>
      </div>
    <% end %>

    <!-- Links -->
    <div class="mt-6 pt-6 border-t border-slate-200">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
