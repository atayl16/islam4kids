<div class="space-y-3 text-center">
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="text-sm text-slate-600">
      Don't have an account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold text-emerald-600 hover:text-emerald-700 transition-colors" %>
    </p>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p class="text-sm text-slate-600">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-semibold text-emerald-600 hover:text-emerald-700 transition-colors" %>
    </p>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p class="text-sm text-slate-600">
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "font-semibold text-emerald-600 hover:text-emerald-700 transition-colors" %>
    </p>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <p class="text-sm text-slate-600">
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "font-semibold text-emerald-600 hover:text-emerald-700 transition-colors" %>
    </p>
  <% end %>
</div>
