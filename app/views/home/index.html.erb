<div class="max-w-7xl mx-auto">
  <!-- Hero Section -->
  <div class="text-center py-8 px-4">
    <!-- Logo/Icon -->
    <div class="flex justify-center mb-4">
      <%= image_tag "islam4kids-logo-400.png", class: "w-20 h-20 rounded-2xl shadow-xl", alt: "Islam4Kids Logo" %>
    </div>

    <!-- Main Heading -->
    <h1 class="text-4xl md:text-5xl font-bold mb-3">
      <span class="bg-gradient-to-r from-emerald-600 via-emerald-500 to-violet-600 bg-clip-text text-transparent">
        Islam4Kids
      </span>
    </h1>
    <p class="text-xl text-slate-700 font-medium mb-2">
      Inspiring Islamic Education for Children
    </p>
    <p class="text-base text-slate-600 max-w-2xl mx-auto mb-8">
      A safe, engaging platform for young Muslims to learn, grow, and discover the beauty of Islam.
    </p>
  </div>

  <!-- Content Cards Grid -->
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 px-4 pb-16">
    <!-- Stories Card -->
    <%= link_to stories_path, class: "group block" do %>
      <div class="relative bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-3 border-2 border-transparent hover:border-violet-400">
        <!-- Gradient Top Bar -->
        <div class="h-3 bg-gradient-to-r from-violet-500 via-violet-400 to-amber-400"></div>

        <!-- Card Content -->
        <div class="p-10">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-violet-500 to-violet-600 rounded-2xl mb-6 shadow-lg group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>

          <!-- Title -->
          <h2 class="text-3xl font-bold text-slate-800 mb-4 group-hover:text-violet-600 transition-colors">
            Inspiring Stories
          </h2>

          <!-- Description -->
          <p class="text-lg text-slate-600 leading-relaxed mb-6">
            Engage with beautiful stories from Islamic history, prophets, and companions that inspire faith, character, and wisdom.
          </p>

          <!-- CTA -->
          <div class="flex items-center text-violet-600 font-semibold group-hover:translate-x-2 transition-transform">
            <span>Read Stories</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </div>
        </div>

        <!-- Decorative Circle -->
        <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-violet-100 rounded-full opacity-20"></div>
      </div>
    <% end %>

    <!-- Videos Card -->
    <%= link_to videos_path, class: "group block" do %>
      <div class="relative bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-3 border-2 border-transparent hover:border-red-400">
        <!-- Gradient Top Bar -->
        <div class="h-3 bg-gradient-to-r from-red-600 via-red-500 to-amber-400"></div>

        <!-- Card Content -->
        <div class="p-10">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-red-600 to-red-700 rounded-2xl mb-6 shadow-lg group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>

          <!-- Title -->
          <h2 class="text-3xl font-bold text-slate-800 mb-4 group-hover:text-red-600 transition-colors">
            Educational Videos
          </h2>

          <!-- Description -->
          <p class="text-lg text-slate-600 leading-relaxed mb-6">
            Watch engaging Islamic educational videos that teach and inspire young Muslims to learn about their faith.
          </p>

          <!-- CTA -->
          <div class="flex items-center text-red-600 font-semibold group-hover:translate-x-2 transition-transform">
            <span>Watch Videos</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </div>
        </div>

        <!-- Decorative Circle -->
        <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-red-100 rounded-full opacity-20"></div>
      </div>
    <% end %>

    <!-- Games Card -->
    <%= link_to games_path, class: "group block" do %>
      <div class="relative bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-3 border-2 border-transparent hover:border-blue-400">
        <!-- Gradient Top Bar -->
        <div class="h-3 bg-gradient-to-r from-blue-500 via-blue-400 to-amber-400"></div>

        <!-- Card Content -->
        <div class="p-10">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl mb-6 shadow-lg group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>

          <!-- Title -->
          <h2 class="text-3xl font-bold text-slate-800 mb-4 group-hover:text-blue-600 transition-colors">
            Interactive Games
          </h2>

          <!-- Description -->
          <p class="text-lg text-slate-600 leading-relaxed mb-6">
            Learn through play with fun, educational Islamic games that make learning engaging and memorable for young Muslims.
          </p>

          <!-- CTA -->
          <div class="flex items-center text-blue-600 font-semibold group-hover:translate-x-2 transition-transform">
            <span>Play Games</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </div>
        </div>

        <!-- Decorative Circle -->
        <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-blue-100 rounded-full opacity-20"></div>
      </div>
    <% end %>

    <!-- Printables Card -->
    <%= link_to printables_path, class: "group block" do %>
      <div class="relative bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-3 border-2 border-transparent hover:border-pink-400">
        <!-- Gradient Top Bar -->
        <div class="h-3 bg-gradient-to-r from-pink-500 via-pink-400 to-amber-400"></div>

        <!-- Card Content -->
        <div class="p-10">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-pink-500 to-pink-600 rounded-2xl mb-6 shadow-lg group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
            </svg>
          </div>

          <!-- Title -->
          <h2 class="text-3xl font-bold text-slate-800 mb-4 group-hover:text-pink-600 transition-colors">
            Printable Activities
          </h2>

          <!-- Description -->
          <p class="text-lg text-slate-600 leading-relaxed mb-6">
            Download worksheets, coloring pages, and educational materials to reinforce Islamic learning at home and in the classroom.
          </p>

          <!-- CTA -->
          <div class="flex items-center text-pink-600 font-semibold group-hover:translate-x-2 transition-transform">
            <span>Browse Printables</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </div>
        </div>

        <!-- Decorative Circle -->
        <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-pink-100 rounded-full opacity-20"></div>
      </div>
    <% end %>
  </div>

  <!-- Footer Message -->
  <div class="text-center pb-16 px-4">
    <div class="inline-block bg-gradient-to-r from-emerald-50 to-violet-50 rounded-2xl px-8 py-6 shadow-lg">
      <p class="text-lg text-slate-700 font-medium">
        <span class="text-2xl">✨</span> Building a foundation of faith, one story at a time <span class="text-2xl">✨</span>
      </p>
    </div>
  </div>
</div>
