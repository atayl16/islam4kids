<div class="max-w-4xl mx-auto">
  <h1 class="text-4xl font-bold text-gray-800 mb-8">Blogs</h1>

  <div class="space-y-6">
    <% @blogs.each do |blog| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <h2 class="text-2xl font-semibold text-gray-800 mb-3">
          <%= link_to blog.title, blog_path(blog), class: "text-green-600 hover:text-green-700 hover:underline" %>
        </h2>
        <p class="text-gray-600 mb-4 line-clamp-3"><%= truncate(blog.content, length: 150) %></p>
        <p class="text-sm text-gray-500">Published: <%= blog.created_at.strftime('%B %d, %Y') %></p>
      </div>
    <% end %>
  </div>
</div>
