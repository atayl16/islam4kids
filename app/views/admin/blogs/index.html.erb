<div class="admin-blogs-index">
  <h1>Blogs</h1>
  <%= link_to 'New Blog', new_admin_blog_path, class: 'btn btn-primary' %>
  
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Created At</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.status %></td>
          <td><%= blog.created_at.strftime('%B %d, %Y') %></td>
          <td><%= link_to 'Show', admin_blog_path(blog) %></td>
          <td><%= link_to 'Edit', edit_admin_blog_path(blog) %></td>
          <td><%= link_to 'Delete', admin_blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>