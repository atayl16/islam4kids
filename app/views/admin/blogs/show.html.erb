<div class="max-w-5xl mx-auto py-8 px-4">
  <!-- Admin Header Banner -->
  <div class="bg-gradient-to-r from-emerald-600 to-emerald-500 rounded-t-xl shadow-lg px-8 py-6">
    <div class="flex justify-between items-start">
      <div class="flex-1">
        <div class="flex items-center space-x-3 mb-3">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h1 class="text-3xl font-bold text-white"><%= @blog.title %></h1>
        </div>
        <div class="flex items-center space-x-6 text-emerald-50">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm"><%= @blog.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
          </div>
          <div class="flex items-center space-x-2">
            <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full <%= @blog.status == 'published' ? 'bg-emerald-400 text-emerald-900' : @blog.status == 'draft' ? 'bg-amber-400 text-amber-900' : 'bg-slate-300 text-slate-700' %>">
              <%= @blog.status.titleize %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content Card -->
  <div class="bg-white rounded-b-xl shadow-lg">
    <div class="p-8">
      <div class="prose prose-lg max-w-none text-slate-700 leading-relaxed">
        <%= simple_format(@blog.content) %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="bg-gradient-to-r from-slate-50 to-slate-100 border-t-2 border-emerald-200 px-8 py-6 rounded-b-xl">
      <div class="flex justify-between items-center">
        <%= link_to admin_blogs_path, class: 'inline-flex items-center px-6 py-3 bg-slate-600 hover:bg-slate-700 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Blogs
        <% end %>

        <div class="flex space-x-4">
          <%= link_to edit_admin_blog_path(@blog), class: 'inline-flex items-center px-6 py-3 bg-sky-500 hover:bg-sky-600 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Blog
          <% end %>

          <%= link_to admin_blog_path(@blog), method: :delete, data: { confirm: 'Are you sure you want to delete this blog?' }, class: 'inline-flex items-center px-6 py-3 bg-red-500 hover:bg-red-600 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
