<div class="admin-blogs-show">
  <h1><%= @blog.title %></h1>
  
  <p><strong>Status:</strong> <%= @blog.status %></p>
  <p><strong>Created:</strong> <%= @blog.created_at.strftime('%B %d, %Y') %></p>
  
  <div class="content">
    <%= simple_format(@blog.content) %>
  </div>
  
  <div class="actions">
    <%= link_to 'Edit', edit_admin_blog_path(@blog), class: 'btn btn-primary' %>
    <%= link_to 'Back to Blogs', admin_blogs_path, class: 'btn btn-secondary' %>
  </div>
</div>