<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to admin_beads_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium mb-4 inline-flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Issues
    <% end %>
  </div>

  <!-- Issue Header -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1">
        <div class="flex items-center gap-3 mb-2">
          <h1 class="text-2xl font-bold text-gray-900"><%= @issue["title"] %></h1>
        </div>
        <div class="flex items-center gap-2 text-sm">
          <span class="font-mono text-gray-600"><%= @issue["id"] %></span>
          <span class="text-gray-400">â€¢</span>
          <span class="text-gray-600">Created <%= time_ago_in_words(Time.parse(@issue["created_at"])) %> ago</span>
        </div>
      </div>
    </div>

    <!-- Badges -->
    <div class="flex flex-wrap gap-3 mb-4">
      <span class="px-3 py-1 rounded-full text-sm font-bold text-white <%= priority_badge_color(@issue["priority"]) %>">
        P<%= @issue["priority"] %> - <%= priority_label(@issue["priority"]) %>
      </span>
      <span class="px-3 py-1 rounded-full text-sm font-semibold <%= status_badge_color(@issue["status"]) %>">
        <%= @issue["status"].titleize %>
      </span>
      <span class="px-3 py-1 rounded text-sm font-medium <%= type_badge_color(@issue["issue_type"]) %>">
        <%= @issue["issue_type"].titleize %>
      </span>
    </div>

    <!-- Labels -->
    <% if @issue["labels"].present? %>
      <div class="mb-4">
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Labels</h3>
        <div class="flex flex-wrap gap-2">
          <% @issue["labels"].each do |label| %>
            <span class="px-3 py-1 text-sm rounded-full bg-gray-100 text-gray-700 border border-gray-200">
              <%= label %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Description -->
    <% if @issue["description"].present? %>
      <div class="mb-4">
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Description</h3>
        <div class="prose prose-sm max-w-none text-gray-700">
          <%= simple_format(@issue["description"]) %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Metadata Grid -->
  <div class="grid md:grid-cols-2 gap-6 mb-6">
    <!-- Details -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Details</h2>
      <dl class="space-y-3 text-sm">
        <div>
          <dt class="text-gray-500 font-medium">Created</dt>
          <dd class="text-gray-900 mt-1">
            <%= Time.parse(@issue["created_at"]).strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
        <div>
          <dt class="text-gray-500 font-medium">Last Updated</dt>
          <dd class="text-gray-900 mt-1">
            <%= Time.parse(@issue["updated_at"]).strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
        <% if @issue["source_repo"].present? %>
          <div>
            <dt class="text-gray-500 font-medium">Source Repository</dt>
            <dd class="text-gray-900 mt-1 font-mono text-xs"><%= @issue["source_repo"] %></dd>
          </div>
        <% end %>
        <% if @issue["assignee"].present? %>
          <div>
            <dt class="text-gray-500 font-medium">Assignee</dt>
            <dd class="text-gray-900 mt-1"><%= @issue["assignee"] %></dd>
          </div>
        <% end %>
      </dl>
    </div>

    <!-- Dependencies -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Dependencies</h2>
      <% if @issue["dependency_count"].to_i > 0 || @issue["dependent_count"].to_i > 0 %>
        <dl class="space-y-3 text-sm">
          <% if @issue["dependency_count"].to_i > 0 %>
            <div>
              <dt class="text-gray-500 font-medium">Blocked By</dt>
              <dd class="text-red-600 mt-1 font-semibold">
                <%= @issue["dependency_count"] %> issue<%= 's' unless @issue["dependency_count"] == 1 %>
              </dd>
            </div>
          <% end %>
          <% if @issue["dependent_count"].to_i > 0 %>
            <div>
              <dt class="text-gray-500 font-medium">Blocks</dt>
              <dd class="text-yellow-600 mt-1 font-semibold">
                <%= @issue["dependent_count"] %> issue<%= 's' unless @issue["dependent_count"] == 1 %>
              </dd>
            </div>
          <% end %>
        </dl>
      <% else %>
        <p class="text-sm text-gray-500">No dependencies</p>
      <% end %>
    </div>
  </div>

  <!-- Dependency Tree -->
  <% if @dependency_tree.present? && @dependency_tree != "Error loading dependency tree" %>
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Dependency Tree</h2>
      <div class="bg-gray-900 text-green-400 rounded-lg p-4 overflow-x-auto font-mono text-sm">
        <pre class="whitespace-pre"><%= @dependency_tree %></pre>
      </div>
    </div>
  <% end %>

  <!-- Quick Actions -->
  <div class="mt-8 bg-gradient-to-r from-indigo-50 to-blue-50 border-2 border-indigo-200 rounded-lg p-6">
    <h3 class="text-sm font-semibold text-indigo-900 mb-3 flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      CLI Commands for This Issue
    </h3>
    <div class="grid md:grid-cols-2 gap-3">
      <div class="bg-white rounded-lg p-3 border border-indigo-100">
        <div class="text-xs text-gray-600 mb-1">View Details</div>
        <code class="text-sm text-indigo-700 font-mono">bd show <%= @issue["id"] %></code>
      </div>
      <div class="bg-white rounded-lg p-3 border border-indigo-100">
        <div class="text-xs text-gray-600 mb-1">View Dependencies</div>
        <code class="text-sm text-indigo-700 font-mono">bd dep tree <%= @issue["id"] %></code>
      </div>
      <div class="bg-white rounded-lg p-3 border border-indigo-100">
        <div class="text-xs text-gray-600 mb-1">Start Working</div>
        <code class="text-sm text-indigo-700 font-mono">bd update <%= @issue["id"] %> --status in_progress</code>
      </div>
      <div class="bg-white rounded-lg p-3 border border-indigo-100">
        <div class="text-xs text-gray-600 mb-1">Close Issue</div>
        <code class="text-sm text-indigo-700 font-mono">bd close <%= @issue["id"] %> --reason "..."</code>
      </div>
    </div>
  </div>
</div>
