<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Beads Issue Tracker</h1>
    <p class="mt-2 text-sm text-gray-600">Read-only view of project issues</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
    <div class="bg-blue-100 rounded-lg p-4">
      <div class="text-3xl font-bold text-blue-900"><%= @stats[:total] %></div>
      <div class="text-sm text-blue-700 font-medium">Total</div>
    </div>
    <div class="bg-green-100 rounded-lg p-4">
      <div class="text-3xl font-bold text-green-900"><%= @stats[:open] %></div>
      <div class="text-sm text-green-700 font-medium">Open</div>
    </div>
    <div class="bg-yellow-100 rounded-lg p-4">
      <div class="text-3xl font-bold text-yellow-900"><%= @stats[:in_progress] %></div>
      <div class="text-sm text-yellow-700 font-medium">In Progress</div>
    </div>
    <div class="bg-purple-100 rounded-lg p-4">
      <div class="text-3xl font-bold text-purple-900"><%= @stats[:ready] %></div>
      <div class="text-sm text-purple-700 font-medium">Ready</div>
    </div>
    <div class="bg-red-100 rounded-lg p-4">
      <div class="text-3xl font-bold text-red-900"><%= @stats[:blocked] %></div>
      <div class="text-sm text-red-700 font-medium">Blocked</div>
    </div>
    <div class="bg-gray-100 rounded-lg p-4">
      <div class="text-3xl font-bold text-gray-900"><%= @stats[:closed] %></div>
      <div class="text-sm text-gray-700 font-medium">Closed</div>
    </div>
  </div>

  <!-- CLI Cheatsheet -->
  <div class="bg-gradient-to-r from-indigo-50 to-blue-50 border-2 border-indigo-200 rounded-lg p-6 mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-bold text-indigo-900 flex items-center">
        <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Beads CLI Quick Reference
      </h2>
      <span class="text-xs text-indigo-600 font-mono">Terminal commands</span>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <!-- Viewing Issues -->
      <div>
        <h3 class="text-sm font-semibold text-indigo-800 mb-3 uppercase tracking-wide">üìã Viewing Issues</h3>
        <div class="space-y-2 text-sm">
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd ready</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî Show unblocked work</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd ready --priority 1</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî P1 items only</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd list --status open</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî All open issues</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd show &lt;id&gt;</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî Issue details</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd stats</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî Project overview</span>
          </div>
        </div>
      </div>

      <!-- Managing Work -->
      <div>
        <h3 class="text-sm font-semibold text-indigo-800 mb-3 uppercase tracking-wide">‚úèÔ∏è Managing Work</h3>
        <div class="space-y-2 text-sm">
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd create "Title" -t task -p 1</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî New issue</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd update &lt;id&gt; --status in_progress</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî Start work</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd close &lt;id&gt; --reason "Done"</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî Complete issue</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd dep tree &lt;id&gt;</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî View dependencies</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd blocked</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî Show blocked items</span>
          </div>
        </div>
      </div>

      <!-- Filtering & Search -->
      <div>
        <h3 class="text-sm font-semibold text-indigo-800 mb-3 uppercase tracking-wide">üîç Filtering & Search</h3>
        <div class="space-y-2 text-sm">
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd list --label tests</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî By label</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd list --priority 1</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî By priority</span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <code class="text-indigo-600 font-mono">bd list --json</code>
            <span class="text-gray-600 text-xs ml-2">‚Äî JSON output</span>
          </div>
        </div>
      </div>

      <!-- Tips -->
      <div>
        <h3 class="text-sm font-semibold text-indigo-800 mb-3 uppercase tracking-wide">üí° Quick Tips</h3>
        <div class="space-y-2 text-sm">
          <div class="bg-white rounded p-2 border border-indigo-100">
            <span class="text-gray-700"><strong>Types:</strong> <code class="text-xs">task, bug, feature, epic, chore</code></span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <span class="text-gray-700"><strong>Priorities:</strong> <code class="text-xs">0 (highest) to 4 (lowest)</code></span>
          </div>
          <div class="bg-white rounded p-2 border border-indigo-100">
            <span class="text-gray-700"><strong>IDs:</strong> <code class="text-xs">Islam4Kids-abc</code> format</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <%= form_with url: admin_beads_path, method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div class="flex-1 min-w-[200px]">
        <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
        <%= select_tag :status,
            options_for_select([['All Statuses', '']] + @all_statuses.map { |s| [s.titleize, s] }, params[:status]),
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div class="flex-1 min-w-[200px]">
        <label class="block text-sm font-medium text-gray-700 mb-1">Priority</label>
        <%= select_tag :priority,
            options_for_select([['All Priorities', ''], ['P0 (Critical)', 0], ['P1 (High)', 1], ['P2 (Normal)', 2], ['P3 (Low)', 3], ['P4 (Very Low)', 4]], params[:priority]),
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div class="flex-1 min-w-[200px]">
        <label class="block text-sm font-medium text-gray-700 mb-1">Label</label>
        <%= select_tag :label,
            options_for_select([['All Labels', '']] + @all_labels.map { |l| [l, l] }, params[:label]),
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div class="flex gap-2">
        <%= submit_tag "Filter", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium" %>
        <%= link_to "Clear", admin_beads_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 font-medium" %>
      </div>
    <% end %>
  </div>

  <!-- Results Count -->
  <div class="mb-4">
    <p class="text-sm text-gray-600">
      Showing <strong><%= @issues.count %></strong> issue<%= 's' unless @issues.count == 1 %>
      <% if @has_filters %>
        <span class="text-indigo-600">(filtered)</span>
      <% end %>
    </p>
  </div>

  <!-- Issues Grouped by Priority -->
  <% if @issues_by_priority.present? && @issues_by_priority.any? %>
    <div class="space-y-8">
      <% @issues_by_priority.each do |priority, issues| %>
        <div>
          <div class="flex items-center gap-3 mb-4">
            <span class="px-3 py-1 rounded-full text-sm font-bold text-white <%= priority_badge_color(priority) %>">
              P<%= priority %>
            </span>
            <h2 class="text-lg font-semibold text-gray-900">
              <%= priority_label(priority) %>
              <span class="text-gray-500 font-normal text-sm">(<%= issues.count %>)</span>
            </h2>
          </div>

          <div class="bg-white shadow overflow-hidden rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Labels</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% issues.each do |issue| %>
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= link_to issue["id"], admin_bead_path(issue["id"]),
                          class: "text-indigo-600 hover:text-indigo-900 font-mono text-sm hover:underline" %>
                    </td>
                    <td class="px-6 py-4">
                      <div class="text-sm font-medium text-gray-900"><%= issue["title"] %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-2 py-1 text-xs font-medium rounded <%= type_badge_color(issue["issue_type"]) %>">
                        <%= issue["issue_type"] %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge_color(issue["status"]) %>">
                        <%= issue["status"].titleize %>
                      </span>
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex flex-wrap gap-1">
                        <% (issue["labels"] || []).first(5).each do |label| %>
                          <span class="px-2 py-1 text-xs rounded bg-gray-100 text-gray-700 border border-gray-200">
                            <%= label %>
                          </span>
                        <% end %>
                        <% if (issue["labels"] || []).count > 5 %>
                          <span class="px-2 py-1 text-xs text-gray-500">
                            +<%= issue["labels"].count - 5 %> more
                          </span>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No issues found</h3>
      <p class="mt-1 text-sm text-gray-500">Try adjusting your filters or check the CLI with <code class="bg-gray-100 px-2 py-1 rounded">bd list</code></p>
    </div>
  <% end %>
</div>
