<div class="max-w-5xl mx-auto py-8 px-4">
  <!-- Admin Header Banner -->
  <div class="bg-gradient-to-r from-red-600 to-red-500 rounded-t-xl shadow-lg px-8 py-6">
    <div class="flex justify-between items-start">
      <div class="flex-1">
        <div class="flex items-center space-x-3 mb-3">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
          <h1 class="text-3xl font-bold text-white"><%= @video.title %></h1>
        </div>
        <div class="flex items-center space-x-6 text-red-50">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm"><%= @video.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
          </div>
          <div class="flex items-center space-x-2">
            <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full <%= status_badge_classes(@video.status, color_scheme: :red) %>">
              <%= @video.status.titleize %>
            </span>
          </div>
          <% if @video.featured? %>
            <div class="flex items-center space-x-2">
              <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-yellow-400 text-yellow-900">
                ‚≠ê Featured
              </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Content Card -->
  <div class="bg-white rounded-b-xl shadow-lg">
    <!-- Video Embed -->
    <% if @video.youtube_video_id.present? %>
      <div class="p-8">
        <h3 class="text-lg font-semibold text-slate-700 mb-3 flex items-center">
          <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Video Preview
        </h3>
        <div class="aspect-w-16 aspect-h-9 bg-slate-100 rounded-lg overflow-hidden shadow-inner">
          <iframe
            src="<%= @video.youtube_embed_url %>"
            title="<%= @video.title %>"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            class="w-full h-full"
            style="aspect-ratio: 16 / 9;">
          </iframe>
        </div>
      </div>
    <% end %>

    <!-- Description -->
    <% if @video.description.present? %>
      <div class="px-8 pb-8">
        <h3 class="text-lg font-semibold text-slate-700 mb-3 flex items-center">
          <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Description
        </h3>
        <div class="prose prose-lg max-w-none text-slate-700 leading-relaxed p-6 bg-red-50 border-l-4 border-red-500 rounded-r-lg">
          <%= simple_format(@video.description) %>
        </div>
      </div>
    <% end %>

    <!-- Video Details -->
    <div class="px-8 pb-8">
      <h3 class="text-lg font-semibold text-slate-700 mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Video Details
      </h3>
      <div class="bg-slate-50 rounded-lg p-6 space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-slate-600">Video URL:</span>
          <a href="<%= @video.video_url %>" target="_blank" class="text-sm text-red-600 hover:text-red-800 font-medium break-all">
            <%= @video.video_url %>
          </a>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-slate-600">Position:</span>
          <span class="text-sm text-slate-800 font-semibold"><%= @video.position %></span>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="bg-gradient-to-r from-slate-50 to-slate-100 border-t-2 border-red-200 px-8 py-6 rounded-b-xl">
      <div class="flex justify-between items-center">
        <%= link_to admin_videos_path, class: 'inline-flex items-center px-6 py-3 bg-slate-600 hover:bg-slate-700 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Videos
        <% end %>

        <div class="flex space-x-4">
          <%= link_to edit_admin_video_path(@video), class: 'inline-flex items-center px-6 py-3 bg-sky-500 hover:bg-sky-600 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Video
          <% end %>

          <%= link_to admin_video_path(@video), data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this video?' }, class: 'inline-flex items-center px-6 py-3 bg-red-500 hover:bg-red-600 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
