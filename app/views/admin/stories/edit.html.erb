<div class="max-w-3xl mx-auto py-8 px-4">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Edit Story</h1>

  <%= render 'form', story: @story %>

  <div class="mt-4 flex space-x-4">
    <%= link_to 'Show', admin_story_path(@story), class: 'text-purple-600 hover:text-purple-800 font-medium' %>
    <span class="text-gray-400">|</span>
    <%= link_to '← Back to Stories', admin_stories_path, class: 'text-gray-600 hover:text-gray-800 font-medium' %>
  </div>
</div>
