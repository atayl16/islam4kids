<div class="max-w-5xl mx-auto py-8 px-4">
  <!-- Admin Header Banner -->
  <div class="bg-gradient-to-r from-violet-600 to-violet-500 rounded-t-xl shadow-lg px-8 py-6">
    <div class="flex justify-between items-start">
      <div class="flex-1">
        <div class="flex items-center space-x-3 mb-3">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <h1 class="text-3xl font-bold text-white"><%= @story.title %></h1>
        </div>
        <div class="flex items-center space-x-6 text-violet-50">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm"><%= @story.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
          </div>
          <div class="flex items-center space-x-2">
            <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full <%= @story.status == 'published' ? 'bg-violet-400 text-violet-900' : @story.status == 'draft' ? 'bg-amber-400 text-amber-900' : 'bg-slate-300 text-slate-700' %>">
              <%= @story.status.titleize %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content Card -->
  <div class="bg-white rounded-b-xl shadow-lg">
    <div class="p-8">
      <div class="prose prose-lg max-w-none text-slate-700 leading-relaxed">
        <%= simple_format(@story.content) %>
      </div>
    </div>

    <!-- Header Image Preview -->
    <% if @story.header_image.attached? %>
      <div class="px-8 pb-8">
        <h3 class="text-lg font-semibold text-slate-700 mb-3 flex items-center">
          <svg class="w-5 h-5 mr-2 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Header Image
        </h3>
        <div class="border-2 border-violet-200 rounded-lg overflow-hidden">
          <%= image_tag @story.header_image, class: 'w-full h-auto' %>
        </div>
      </div>
    <% end %>

    <!-- Action Buttons -->
    <div class="bg-gradient-to-r from-slate-50 to-slate-100 border-t-2 border-violet-200 px-8 py-6 rounded-b-xl">
      <div class="flex justify-between items-center">
        <%= link_to admin_stories_path, class: 'inline-flex items-center px-6 py-3 bg-slate-600 hover:bg-slate-700 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Stories
        <% end %>

        <div class="flex space-x-4">
          <%= link_to edit_admin_story_path(@story), class: 'inline-flex items-center px-6 py-3 bg-sky-500 hover:bg-sky-600 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Story
          <% end %>

          <%= link_to admin_story_path(@story), method: :delete, data: { confirm: 'Are you sure you want to delete this story?' }, class: 'inline-flex items-center px-6 py-3 bg-red-500 hover:bg-red-600 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
