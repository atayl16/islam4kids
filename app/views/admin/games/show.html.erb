<div class="max-w-5xl mx-auto py-8 px-4">
  <!-- Admin Header Banner -->
  <div class="bg-gradient-to-r from-indigo-600 to-indigo-500 rounded-t-xl shadow-lg px-8 py-6">
    <div class="flex justify-between items-start">
      <div class="flex-1">
        <div class="flex items-center space-x-3 mb-3">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h1 class="text-3xl font-bold text-white"><%= @game.title %></h1>
        </div>
        <div class="flex items-center space-x-6 text-indigo-50">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm"><%= @game.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
          </div>
          <div class="flex items-center space-x-2">
            <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full <%= status_badge_classes(@game.status, color_scheme: :indigo) %>">
              <%= @game.status.titleize %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content Card -->
  <div class="bg-white rounded-b-xl shadow-lg">
    <div class="p-8">
      <% if @game.description.present? %>
        <div class="mb-8 p-6 bg-indigo-50 border-l-4 border-indigo-500 rounded-r-lg">
          <h3 class="text-sm font-semibold text-indigo-900 uppercase tracking-wide mb-2 flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Description
          </h3>
          <p class="text-indigo-800 leading-relaxed"><%= simple_format(@game.description) %></p>
        </div>
      <% end %>

      <div class="mb-6">
        <h3 class="text-lg font-semibold text-slate-700 mb-2 flex items-center">
          <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
          </svg>
          Game URL
        </h3>
        <div class="bg-slate-50 border border-slate-200 rounded-lg p-4">
          <a href="<%= @game.game_url %>" target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:text-indigo-800 font-medium break-all">
            <%= @game.game_url %>
          </a>
        </div>
      </div>

      <% if @game.source_attribution.present? %>
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-slate-700 mb-2 flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            Source Attribution
          </h3>
          <div class="bg-slate-50 border border-slate-200 rounded-lg p-4">
            <p class="text-slate-700"><%= @game.source_attribution %></p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Thumbnail Image Preview -->
    <% if @game.thumbnail_image.attached? %>
      <div class="px-8 pb-8">
        <h3 class="text-lg font-semibold text-slate-700 mb-3 flex items-center">
          <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Thumbnail Image
        </h3>
        <div class="border-2 border-indigo-200 rounded-lg overflow-hidden max-w-md">
          <%= image_tag @game.thumbnail_image, class: 'w-full h-auto', alt: @game.title %>
        </div>
      </div>
    <% end %>

    <!-- Action Buttons -->
    <div class="bg-gradient-to-r from-slate-50 to-slate-100 border-t-2 border-indigo-200 px-8 py-6 rounded-b-xl">
      <div class="flex justify-between items-center">
        <%= link_to admin_games_path, class: 'inline-flex items-center px-6 py-3 bg-slate-600 hover:bg-slate-700 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Games
        <% end %>

        <div class="flex space-x-4">
          <%= link_to edit_admin_game_path(@game), class: 'inline-flex items-center px-6 py-3 bg-sky-500 hover:bg-sky-600 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Game
          <% end %>

          <%= link_to admin_game_path(@game), data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this game?' }, class: 'inline-flex items-center px-6 py-3 bg-red-500 hover:bg-red-600 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

