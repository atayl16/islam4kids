<div class="bg-white rounded-lg shadow-md p-8">
  <%= form_with model: [:admin, @game], local: true, class: 'space-y-6' do |form| %>
    <% if @game.errors.any? %>
      <div id="error_explanation" class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h2 class="font-bold mb-2"><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= form.text_field :title, class: 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
    </div>

    <div class="field">
      <%= form.label :description, class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= form.text_area :description, rows: 5, class: 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent', placeholder: 'A brief description of the game...' %>
    </div>

    <div class="field">
      <%= form.label :game_url, "Game URL", class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <p class="text-xs text-gray-500 mb-2">The full URL to the game (e.g., https://www.educaplay.com/game/123456)</p>
      <%= form.url_field :game_url, class: 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent', placeholder: 'https://...' %>
    </div>

    <div class="field">
      <%= form.label :source_attribution, "Source Attribution", class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <p class="text-xs text-gray-500 mb-2">Optional: Credit the source of this game</p>
      <%= form.text_field :source_attribution, class: 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent', placeholder: 'e.g., Educaplay, Wordwall, etc.' %>
    </div>

    <div class="field">
      <%= form.label :status, class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= form.select :status, options_for_select(Game.statuses.keys.map { |status| [status.humanize, status] }, @game.status), 
                      {}, class: 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
    </div>

    <div class="field">
      <%= form.label :thumbnail_image, class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <p class="text-xs text-gray-500 mb-2">Upload a thumbnail image or paste a screenshot (PNG, JPG, GIF, or WebP, max 10MB)</p>
      
      <div data-controller="clipboard-file">
        <div class="flex items-center gap-3 mb-2">
          <%= form.file_field :thumbnail_image, data: { clipboard_file_target: "input" }, accept: 'image/png,image/jpeg,image/gif,image/webp', class: 'flex-1 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
          <div data-clipboard-file-target="browseButton" data-action="click->clipboard-file#openFileDialog" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md cursor-pointer font-medium transition-colors">
            Browse
          </div>
        </div>
        <div data-clipboard-file-target="dropZone" class="border-2 border-dashed border-indigo-300 rounded-lg p-4 text-center hover:border-indigo-500 transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" tabindex="0">
          <p class="text-sm text-indigo-700 font-semibold">OR click here and press Ctrl+V / Cmd+V to paste from clipboard</p>
        </div>
        <div data-clipboard-file-target="feedback" class="hidden mt-2 p-3 bg-green-50 border border-green-200 rounded-lg text-green-800 text-sm font-medium"></div>
      </div>
      
      <% if @game.thumbnail_image.attached? %>
        <div class="mt-4">
          <p class="text-sm text-gray-600 mb-2">Current thumbnail:</p>
          <%= image_tag @game.thumbnail_image, class: 'h-32 w-32 object-cover rounded-lg border-2 border-indigo-200', alt: 'Current thumbnail' %>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= form.submit class: 'bg-indigo-500 hover:bg-indigo-600 text-white px-6 py-2 rounded-md font-medium transition-colors cursor-pointer' %>
    </div>
  <% end %>
</div>

