<div class="max-w-7xl mx-auto py-8 px-4">
  <!-- Header Section -->
  <div class="bg-gradient-to-r from-emerald-600 to-emerald-500 rounded-xl shadow-lg px-8 py-6 mb-8">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
        <div>
          <h1 class="text-4xl font-bold text-white">Printables</h1>
          <p class="text-emerald-100 text-sm mt-1">Manage your PDF printables and worksheets</p>
        </div>
      </div>
      <%= link_to new_admin_printable_path, class: 'inline-flex items-center px-6 py-3 bg-white text-emerald-600 hover:bg-emerald-50 rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        New Printable
      <% end %>
    </div>
  </div>

  <!-- Table Card -->
  <div class="bg-white shadow-xl rounded-xl overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gradient-to-r from-slate-100 to-slate-50">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
            <div class="flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span>Thumbnail</span>
            </div>
          </th>
          <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
            <div class="flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
              </svg>
              <span>Title</span>
            </div>
          </th>
          <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
            <div class="flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              <span>Type</span>
            </div>
          </th>
          <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
            <div class="flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Status</span>
            </div>
          </th>
          <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
            <div class="flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span>Created</span>
            </div>
          </th>
          <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% @printables.each do |printable| %>
          <tr class="hover:bg-emerald-50 transition-colors duration-150">
            <td class="px-6 py-5">
              <% if printable.thumbnail_image.attached? %>
                <%= image_tag printable.thumbnail_image, class: 'h-16 w-16 object-cover rounded-lg shadow-sm' %>
              <% else %>
                <div class="h-16 w-16 bg-gray-200 rounded-lg flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              <% end %>
            </td>
            <td class="px-6 py-5">
              <div class="text-sm font-semibold text-slate-900"><%= printable.title %></div>
              <div class="text-xs text-slate-500 mt-1"><%= truncate(printable.description, length: 50) %></div>
            </td>
            <td class="px-6 py-5 whitespace-nowrap">
              <span class="px-3 py-1.5 inline-flex text-xs font-bold rounded-full shadow-sm bg-sky-100 text-sky-800 ring-1 ring-sky-600">
                <%= printable.printable_type.titleize %>
              </span>
            </td>
            <td class="px-6 py-5 whitespace-nowrap">
              <span class="px-3 py-1.5 inline-flex text-xs font-bold rounded-full shadow-sm <%= printable.published? ? 'bg-emerald-100 text-emerald-800 ring-1 ring-emerald-600' : 'bg-amber-100 text-amber-800 ring-1 ring-amber-600' %>">
                <%= printable.published? ? 'Published' : 'Draft' %>
              </span>
            </td>
            <td class="px-6 py-5 whitespace-nowrap text-sm text-slate-600">
              <%= printable.created_at.strftime('%b %d, %Y') %>
            </td>
            <td class="px-6 py-5 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex items-center justify-end space-x-3">
                <%= link_to admin_printable_path(printable), class: 'inline-flex items-center text-emerald-600 hover:text-emerald-800 font-semibold transition-colors' do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  View
                <% end %>
                <%= link_to edit_admin_printable_path(printable), class: 'inline-flex items-center text-sky-600 hover:text-sky-800 font-semibold transition-colors' do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  Edit
                <% end %>
                <%= button_to admin_printable_path(printable), method: :delete, form: { data: { turbo_confirm: 'Are you sure you want to delete this printable?' } }, class: 'inline-flex items-center text-red-600 hover:text-red-800 font-semibold transition-colors' do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  Delete
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
