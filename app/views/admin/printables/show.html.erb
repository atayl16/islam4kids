<div class="max-w-5xl mx-auto py-8 px-4">
  <!-- Admin Header Banner -->
  <div class="bg-gradient-to-r from-emerald-600 to-emerald-500 rounded-t-xl shadow-lg px-8 py-6">
    <div class="flex justify-between items-start">
      <div class="flex-1">
        <div class="flex items-center space-x-3 mb-3">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
          </svg>
          <h1 class="text-3xl font-bold text-white"><%= @printable.title %></h1>
        </div>
        <div class="flex items-center space-x-6 text-emerald-50">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm"><%= @printable.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
          </div>
          <div class="flex items-center space-x-2">
            <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full <%= status_badge_classes(@printable.status, color_scheme: :emerald) %>">
              <%= @printable.status.titleize %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content Card -->
  <div class="bg-white rounded-b-xl shadow-lg">
    <div class="p-8 space-y-6">
      <!-- Type Badge -->
      <div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Type</h3>
        <span class="px-3 py-1.5 inline-flex text-sm font-bold rounded-full shadow-sm bg-sky-100 text-sky-800 ring-1 ring-sky-600">
          <%= @printable.printable_type.titleize %>
        </span>
      </div>

      <!-- Description -->
      <div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Description</h3>
        <p class="text-gray-700 leading-relaxed"><%= simple_format(@printable.description) %></p>
      </div>

      <!-- Thumbnail Image Preview (only show if separate thumbnail is attached) -->
      <% if @printable.thumbnail_image.attached? %>
        <div>
          <h3 class="text-lg font-semibold text-slate-700 mb-3 flex items-center">
            <svg class="w-5 h-5 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Thumbnail Image
          </h3>
          <div class="border-2 border-emerald-200 rounded-lg overflow-hidden max-w-md">
            <%= image_tag @printable.thumbnail_image, class: 'w-full h-auto', alt: "Thumbnail for #{@printable.title}" %>
          </div>
        </div>
      <% end %>

      <!-- PDF File -->
      <% if @printable.pdf_file.attached? %>
        <div>
          <h3 class="text-lg font-semibold text-slate-700 mb-3 flex items-center">
            <svg class="w-5 h-5 mr-2 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
            </svg>
            PDF File
          </h3>
          <div class="flex items-center space-x-4 p-4 bg-red-50 rounded-lg border-2 border-red-200">
            <svg class="w-12 h-12 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
            </svg>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900"><%= @printable.pdf_file.filename %></p>
              <p class="text-sm text-gray-500"><%= number_to_human_size(@printable.pdf_file.byte_size) %></p>
            </div>
            <%= link_to rails_blob_path(@printable.pdf_file, disposition: "attachment"), 
                class: 'inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
              </svg>
              Download PDF
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Image File -->
      <% if @printable.image_file.attached? %>
        <div>
          <h3 class="text-lg font-semibold text-slate-700 mb-3 flex items-center">
            <svg class="w-5 h-5 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Image File
          </h3>
          <div class="space-y-4">
            <div class="border-2 border-emerald-200 rounded-lg overflow-hidden max-w-2xl">
              <%= image_tag @printable.image_file, class: 'w-full h-auto', alt: "Image file for #{@printable.title}" %>
            </div>
            <div class="flex items-center space-x-4 p-4 bg-emerald-50 rounded-lg border-2 border-emerald-200">
              <svg class="w-12 h-12 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900"><%= @printable.image_file.filename %></p>
                <p class="text-sm text-gray-500"><%= number_to_human_size(@printable.image_file.byte_size) %></p>
              </div>
              <%= link_to rails_blob_path(@printable.image_file, disposition: "attachment"), 
                  class: 'inline-flex items-center px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                Download Image
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- No Files Warning -->
      <% unless @printable.has_main_file? %>
        <div class="p-4 bg-amber-50 border-2 border-amber-200 rounded-lg">
          <p class="text-sm text-amber-800">
            <strong>Note:</strong> This printable doesn't have a PDF or image file attached yet. 
            <%= link_to "Edit", edit_admin_printable_path(@printable), class: "font-semibold underline hover:text-amber-900" %> 
            to add files.
          </p>
        </div>
      <% end %>

      <!-- Metadata -->
      <div class="grid grid-cols-2 gap-4 pt-6 border-t border-gray-200">
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Created At</h3>
          <p class="text-gray-700"><%= @printable.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Updated At</h3>
          <p class="text-gray-700"><%= @printable.updated_at.strftime('%B %d, %Y at %I:%M %p') %></p>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="bg-gradient-to-r from-slate-50 to-slate-100 border-t-2 border-emerald-200 px-8 py-6 rounded-b-xl">
      <div class="flex justify-between items-center">
        <%= link_to admin_printables_path, class: 'inline-flex items-center px-6 py-3 bg-slate-600 hover:bg-slate-700 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Printables
        <% end %>
        
        <div class="flex space-x-3">
          <%= link_to edit_admin_printable_path(@printable), class: 'inline-flex items-center px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200' do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
