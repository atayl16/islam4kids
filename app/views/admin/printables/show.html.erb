<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-r from-emerald-600 to-emerald-500 px-6 py-4">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-white"><%= @printable.title %></h1>
        <div class="flex space-x-2">
          <%= link_to edit_admin_printable_path(@printable), class: 'inline-flex items-center px-4 py-2 bg-white text-emerald-600 hover:bg-emerald-50 rounded-md font-semibold transition-colors' do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
          <% end %>
          <%= link_to admin_printables_path, class: 'inline-flex items-center px-4 py-2 bg-white text-emerald-600 hover:bg-emerald-50 rounded-md font-semibold transition-colors' do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to List
          <% end %>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="p-6 space-y-6">
      <div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Type</h3>
        <span class="px-3 py-1.5 inline-flex text-sm font-bold rounded-full shadow-sm bg-sky-100 text-sky-800 ring-1 ring-sky-600">
          <%= @printable.printable_type.titleize %>
        </span>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Status</h3>
        <span class="px-3 py-1.5 inline-flex text-sm font-bold rounded-full shadow-sm <%= @printable.published? ? 'bg-emerald-100 text-emerald-800 ring-1 ring-emerald-600' : 'bg-amber-100 text-amber-800 ring-1 ring-amber-600' %>">
          <%= @printable.published? ? 'Published' : 'Draft' %>
        </span>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Description</h3>
        <p class="text-gray-700"><%= simple_format(@printable.description) %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Thumbnail Image</h3>
        <% if @printable.thumbnail_image.attached? %>
          <%= image_tag @printable.thumbnail_image, class: 'rounded-lg shadow-md max-w-md' %>
        <% else %>
          <p class="text-gray-500">No thumbnail uploaded</p>
        <% end %>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">PDF File</h3>
        <% if @printable.pdf_file.attached? %>
          <div class="flex items-center space-x-4">
            <svg class="w-12 h-12 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
            </svg>
            <div>
              <p class="text-sm font-medium text-gray-900"><%= @printable.pdf_file.filename %></p>
              <p class="text-sm text-gray-500"><%= number_to_human_size(@printable.pdf_file.byte_size) %></p>
              <%= link_to 'Download PDF', rails_blob_path(@printable.pdf_file, disposition: "attachment"), class: 'text-emerald-600 hover:text-emerald-800 text-sm font-semibold' %>
            </div>
          </div>
        <% else %>
          <p class="text-gray-500">No PDF uploaded</p>
        <% end %>
      </div>

      <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-200">
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Published At</h3>
          <p class="text-gray-700"><%= @printable.published_at&.strftime('%B %d, %Y at %I:%M %p') || 'Not set' %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Created At</h3>
          <p class="text-gray-700"><%= @printable.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
        </div>
      </div>
    </div>
  </div>
</div>
