<footer class="bg-gradient-to-r from-slate-800 via-emerald-900 to-violet-900 text-white py-8 mt-16">
	<div class="container mx-auto px-5">
		<div class="grid md:grid-cols-3 gap-8 items-start">
			<!-- Brand -->
			<div>
				<div class="flex items-center space-x-2 mb-3">
					<%= image_tag "islam4kids-logo-400.png", class: "w-8 h-8 rounded-lg flex-shrink-0", alt: "Islam4Kids Logo" %>
					<span class="text-xl font-bold">Islam4Kids</span>
				</div>
				<p class="text-emerald-100 text-sm leading-relaxed mb-3">
					Inspiring Islamic education for children through engaging stories and educational content.
				</p>
				<p class="text-emerald-100 text-xs">
					&copy; <%= Time.current.year %> Islam4Kids. All rights reserved.
				</p>
			</div>

			<!-- Quick Links -->
			<div>
				<h3 class="text-sm font-semibold mb-3 text-emerald-300 uppercase tracking-wider">Information</h3>
				<ul class="space-y-2">
					<li><%= link_to "About", about_path, class: "text-emerald-100 hover:text-white transition-colors text-sm" %></li>
					<li><%= link_to "Contact", contact_path, class: "text-emerald-100 hover:text-white transition-colors text-sm" %></li>
					<li><%= link_to "Contribute", contribute_path, class: "text-emerald-100 hover:text-white transition-colors text-sm" %></li>
				</ul>
			</div>

			<!-- Donate -->
			<div>
				<h3 class="text-sm font-semibold mb-3 text-emerald-300 uppercase tracking-wider">Support Us</h3>
				<%= render "shared/donation_buttons", form_classes: "mb-3" %>
				<p class="text-emerald-100 text-xs italic">
					Building a foundation of faith, one story at a time.
				</p>
			</div>
		</div>
	</div>
</footer>
