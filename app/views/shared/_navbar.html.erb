<nav class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md border-b border-gray-200">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <%= link_to root_path, class: "flex items-center space-x-2" do %>
        <span class="text-2xl font-bold text-green-600 hover:text-green-700 transition-colors">
          Islam4Kids
        </span>
      <% end %>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        <%= link_to "Blogs", blogs_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
        <%= link_to "Stories", stories_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>

        <% if user_signed_in? %>
          <% if current_user.is_admin? %>
            <%= link_to "Admin", admin_blogs_path, class: "text-gray-700 hover:text-green-600 font-medium transition-colors" %>
          <% end %>
          <div class="flex items-center space-x-2 text-gray-600">
            <span><%= current_user.email %></span>
          </div>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, 
                      class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md font-medium transition-colors" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, 
                      class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md font-medium transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
