<div data-controller="modal" data-modal-open-value="false">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-slate-800 mb-2 flex items-center">
        <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-lg flex items-center justify-center mr-3">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        Interactive Games
      </h1>
      <p class="text-slate-600 ml-13">Play fun educational games to learn about Islam</p>
    </div>

    <!-- Games Grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% @games.each do |game| %>
        <div class="group cursor-pointer" data-game-id="<%= game.id %>" data-action="click->modal#open">
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border-2 border-transparent hover:border-indigo-400 transform hover:-translate-y-2">
            <!-- Thumbnail -->
            <div class="relative h-64 bg-gradient-to-br from-slate-100 to-slate-200 overflow-hidden">
              <% if game.thumbnail_image.attached? %>
                <%= image_tag game.thumbnail_image, class: 'w-full h-full object-cover group-hover:scale-110 transition-transform duration-300', alt: game.title %>
              <% else %>
                <div class="flex items-center justify-center h-full">
                  <svg class="w-24 h-24 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              <% end %>
            </div>

            <!-- Card Content -->
            <div class="p-6">
              <h3 class="text-xl font-bold text-slate-800 mb-2 group-hover:text-indigo-600 transition-colors">
                <%= game.title %>
              </h3>
              <p class="text-slate-600 text-sm line-clamp-2 mb-4">
                <%= truncate(game.description, length: 100) %>
              </p>

              <!-- Play Game Button -->
              <div class="flex items-center text-indigo-600 font-semibold text-sm group-hover:translate-x-2 transition-transform">
                Play Game
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- Hidden Modal Content (will be shown in modal) -->
          <div id="game-modal-content-<%= game.id %>" class="hidden" data-game-title="<%= game.title %>">
            <!-- Game iframe first for better UX -->
            <div class="bg-slate-100 rounded-lg p-4 mb-6">
              <div class="aspect-video bg-slate-200 rounded overflow-hidden">
                <iframe 
                  src="<%= game.game_url %>" 
                  class="w-full h-full"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy">
                </iframe>
              </div>
            </div>
            <p class="text-slate-700 text-base mb-4 leading-relaxed"><%= simple_format(game.description) %></p>
            <% if game.source_attribution.present? %>
              <div class="flex items-center text-sm text-slate-600">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
                <span>Source: <%= game.source_attribution %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Empty State -->
    <% if @games.empty? %>
      <div class="text-center py-16 bg-white rounded-2xl shadow-lg">
        <svg class="w-24 h-24 mx-auto text-slate-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="text-2xl font-bold text-slate-700 mb-2">No games yet</h3>
        <p class="text-slate-500">Check back soon for fun interactive games!</p>
      </div>
    <% end %>
  </div>

  <!-- Modal Container -->
  <div id="game-modal" data-modal-target="container" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4" data-action="click->modal#close">
    <div class="bg-white rounded-2xl shadow-2xl max-w-5xl w-full max-h-[95vh] flex flex-col" onclick="event.stopPropagation()">
      <div class="flex-shrink-0 border-b border-gray-200 px-6 py-4 flex justify-between items-center">
        <h3 class="text-xl font-bold text-slate-800">Game</h3>
        <button data-action="click->modal#close" class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div data-modal-target="body" class="flex-1 overflow-y-auto p-6">
        <!-- Modal content will be inserted here -->
      </div>
    </div>
  </div>
</div>
