<div data-controller="modal" data-modal-open-value="false">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-12">
    <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-full mb-4 shadow-lg">
      <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
      </svg>
    </div>
    <h1 class="text-5xl font-bold text-slate-800 mb-3">Printables & Worksheets</h1>
    <p class="text-xl text-slate-600">Download free Islamic educational resources for kids</p>
    <div class="mt-4 h-1 w-32 bg-gradient-to-r from-emerald-500 to-amber-400 rounded-full mx-auto"></div>
  </div>

  <!-- Printables Grid -->
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    <% @printables.each do |printable| %>
      <div class="group cursor-pointer" data-printable-id="<%= printable.id %>" data-action="click->modal#open">
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border-2 border-transparent hover:border-emerald-400 transform hover:-translate-y-2">
          <!-- Thumbnail -->
          <div class="relative h-64 bg-gradient-to-br from-slate-100 to-slate-200 overflow-hidden">
            <% if printable.thumbnail_image.attached? %>
              <%= image_tag printable.thumbnail_image, class: 'w-full h-full object-cover group-hover:scale-110 transition-transform duration-300', alt: printable.title %>
            <% else %>
              <div class="flex items-center justify-center h-full">
                <svg class="w-24 h-24 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
            <% end %>

            <!-- Type Badge -->
            <div class="absolute top-4 right-4">
              <span class="px-3 py-1.5 inline-flex text-xs font-bold rounded-full shadow-lg bg-emerald-600 text-white">
                <%= printable.printable_type.titleize %>
              </span>
            </div>
          </div>

          <!-- Card Content -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-slate-800 mb-2 group-hover:text-emerald-600 transition-colors">
              <%= printable.title %>
            </h3>
            <p class="text-slate-600 text-sm line-clamp-2 mb-4">
              <%= truncate(printable.description, length: 100) %>
            </p>

            <!-- View Details Button -->
            <div class="flex items-center text-emerald-600 font-semibold text-sm group-hover:translate-x-2 transition-transform">
              View Details
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Hidden Modal Content (will be shown in modal) -->
        <div id="printable-modal-content-<%= printable.id %>" class="hidden">
          <h2 class="text-3xl font-bold text-slate-800 mb-4"><%= printable.title %></h2>
          <div class="mb-4">
            <span class="px-3 py-1.5 inline-flex text-sm font-bold rounded-full bg-emerald-100 text-emerald-800">
              <%= printable.printable_type.titleize %>
            </span>
          </div>
          <% if printable.thumbnail_image.attached? %>
            <%= image_tag printable.thumbnail_image, class: 'w-full max-w-md rounded-lg shadow-lg mb-6', alt: printable.title %>
          <% end %>
          <p class="text-slate-700 text-lg mb-6 leading-relaxed"><%= simple_format(printable.description) %></p>
          <% if printable.pdf_file.attached? %>
            <%= link_to rails_blob_path(printable.pdf_file, disposition: "attachment"), class: 'inline-flex items-center px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200' do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Download PDF
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Empty State -->
  <% if @printables.empty? %>
    <div class="text-center py-16 bg-white rounded-2xl shadow-lg">
      <svg class="w-24 h-24 mx-auto text-slate-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="text-2xl font-bold text-slate-700 mb-2">No printables yet</h3>
      <p class="text-slate-500">Check back soon for free educational resources!</p>
    </div>
  <% end %>
  </div>

  <!-- Modal Container -->
  <div id="printable-modal" data-modal-target="container" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4" data-action="click->modal#close">
    <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] flex flex-col" onclick="event.stopPropagation()">
      <div class="flex-shrink-0 border-b border-gray-200 px-6 py-4 flex justify-between items-center">
        <h3 class="text-xl font-bold text-slate-800">Printable Details</h3>
        <button data-action="click->modal#close" class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div data-modal-target="body" class="flex-1 overflow-y-auto p-6">
        <!-- Modal content will be inserted here -->
      </div>
    </div>
  </div>
</div>
